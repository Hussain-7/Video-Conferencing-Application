  <body>
    <div class="login__form">
      <p class="sign" align="center">Sign up</p>
      <form class="form1">
        <input class="un" type="text" align="center" placeholder="Username" />
        <input class="un" type="text" align="center" placeholder="Email" />
        <input
          class="pass"
          type="password"
          align="center"
          placeholder="Password"
        />
        <button class="submit" align="center">Sign up</button>
        <hr style="border: 1px solid #e0e1e2; margin-top: 20px" />
        <a
          style="
            display: block;
            margin-left: 50px;
            margin-top: 15px;
            color: black;
            padding-bottom: 20px;
          "
          href="/"
          >Already have an account? Click to log in!</a
        >
      </form>
      
    </div>
  </body>
